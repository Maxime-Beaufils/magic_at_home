<%= stylesheet_link_tag params[:controller] %>
<div class="wrapper ">
  <%= render 'navbar', :layout => 'navbar' %>
    <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-header">
                <h4 class="card-title"> Les parties à venir:</h4>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                      <th>Lieu</th>
                      <th>Date</th>
                      <th>Format joué</th>
                      <th>Description</th>
                    </thead>
                    <tbody>
                    <%@games.each do |game| %>
                      <tr>
                        <td><%= game.place %></td>
                        <td><%= game.date %></td>
                        <td><%= game.game_format %></td>
                        <td><%= game.description %></td>
                        <td><a href="<%= game_path(game.id) %>" class="btn btn-primary">Lien</a></td>
                      </tr>
                    <%end%>
                    </tbody>
                  </table>
                  <div class="container pagination justify-content-center">
                    <%= paginate @games, theme: 'twitter-bootstrap-4'%>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>